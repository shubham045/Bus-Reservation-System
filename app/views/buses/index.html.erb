
     <%= form_tag({controller: "buses", action: "index"}, method: "get", class: "") do %>
        <%= label_tag(:name, "Name:") %>
        <%= text_field_tag(:name) %>

        <%= label_tag(:source, "Source:") %>
        <%= text_field_tag(:source) %>

        <%= label_tag(:destination, "Destination:") %>
        <%= text_field_tag(:destination) %>
        <%= submit_tag "Search", :class => 'btn btn-info glyphicon glyphicon-search' %>
    <% end %>

<br><br>
<p id="notice"><%= notice %></p>
<h1>Buses</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Registration no</th>
      <th>Source</th>
      <th>Destination</th>
      <th>Total seats</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.name %></td>
        <td><%= bus.registration_no %></td>
        <td><%= bus.source %></td>
        <td><%= bus.destination %></td>
        <td><%= bus.total_seats %></td>
         <td><%= link_to 'Reservation', new_bus_reservation_path(bus), class:'btn btn-success' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

